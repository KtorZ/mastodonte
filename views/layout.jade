doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    link(rel='stylesheet', href='/tinyscrollbar.css')
    link(rel='stylesheet', href='/bootstrap.css')
    link(rel='stylesheet', href='/main.css')
    block title
      title Mastodonte
  body
    block messages
      -if(messages && messages.info.length > 0)
        .alert(class=['alert-success', 'alert-dismissible', 'myAlert'], role='alert', data-dismiss="alert")
          span(class=['glyphicon', 'glyphicon-thumbs-up', 'alert-icon']) 
          =  messages.info[0]

      -if(messages && messages.alert.length > 0)
        .alert(class=['alert-danger', 'alert-dismissible', 'myAlert'], role='alert', data-dismiss="alert")
          span(class=['glyphicon', 'glyphicon-warning-sign', 'alert-icon'])  
          =  messages.alert[0]

    block header
      header
        .wrapper(class='clearfix')
          a(href='/match/home' class='logo'): img(src='/logo.png' alt='Mastodonte, seul contre tous')
          img(class='catchphrase' src='/catchphrase.png' alt='')  
      .sub-header

    block content

    block footer
      footer
        | &copy; KtorZ 2015

    script(src='/jquery-1.11.2.min.js')
    script(src='/bootstrap.min.js')
    block scripts